cluster_services = [
  'controller',
  'id_allocator',
  'metadata_dissemination_rpc',
  'tx_gateway',
  'partition_balancer_rpc',
  'node_status_rpc',
  'cluster_bootstrap',
  'ephemeral_credential_rpc',
  'self_test_rpc',
  'topic_recovery_status_rpc',
]

cluster_services_h = []
foreach service : cluster_services
  t = custom_target(
    input: f'@service@.json',
    output: f'@service@_service.h',
    command: [rpc_compiler, '--service_file', '@INPUT@',
      '--output_file', '@OUTPUT@'])
  cluster_services_h += [t]
endforeach

